        "Runtime": "dotnetcore1.0",
        "CodeUri": "__CodeUri__",
        "Description": "Demo of Serverless deployment with meetup.com event weather forcaster.",
        "MemorySize": 128,
        "Timeout": 60,
        "Role": null,
        "Policies": [ "AWSLambdaFullAccess" ],
        "Environment" : {
            "Variables": {
            }
        },
        "Events": {
          "PutResource": {
            "Type": "Api",
            "Properties": {
              "Path": "/{proxy+}",
              "Method": "ANY"
            }
          }
        }
      }
    }

  }
