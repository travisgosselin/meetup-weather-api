{
  "AWSTemplateFormatVersion" : "2010-09-09",
  "Transform" : "AWS::Serverless-2016-10-31",
  "Description" : "Demo Mashup API that converts Meetup.com events to weather forcasts for the event day.",
  "Parameters": {
  },
  "Resources" : {

    "DefaultFunction" : {
      "Type" : "AWS::Serverless::Function",
      "Properties": {
